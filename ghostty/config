# Ghostty Terminal Configuration
# Based on previous iTerm2 settings

# Font settings
font-family = MesloLGMNerdFontCompleteM-Regular
font-size = 16
font-thicken = true
font-feature = calt
font-feature = liga

# Window settings
window-inherit-working-directory = true
window-decoration = auto
window-padding-x = 12
window-padding-y = 12
window-theme = dark

# Terminal settings
cursor-style = block
cursor-style-blink = true
mouse-hide-while-typing = true
scrollback-limit = 1000000
background-opacity = 1.0

# Glacier color theme adapted from iTerm2
background = #0c1115
foreground = #ffffff

# Regular colors (0-7)
palette = 0=#1e2126
palette = 1=#bd1c17
palette = 2=#499e53
palette = 3=#fae86e
palette = 4=#2a7ab5
palette = 5=#7349b7
palette = 6=#37a2a6
palette = 7=#8a9097

# Bright colors (8-15)
palette = 8=#404751
palette = 9=#e06c75
palette = 10=#49bd98
palette = 11=#fdce6f
palette = 12=#3b8eea
palette = 13=#a27fd9
palette = 14=#50b4dc
palette = 15=#ffffff

# Key bindings - similar to iTerm2 defaults
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
keybind = super+t=new_tab
keybind = shift+super+n=new_window
keybind = shift+super+left=previous_tab
keybind = shift+super+right=next_tab
keybind = super+f=write_screen_file:paste

# Tab navigation like iTerm2
keybind = super+1=goto_tab:1
keybind = super+2=goto_tab:2
keybind = super+3=goto_tab:3
keybind = super+4=goto_tab:4
keybind = super+5=goto_tab:5
keybind = super+6=goto_tab:6
keybind = super+7=goto_tab:7
keybind = super+8=goto_tab:8
keybind = super+9=goto_tab:9
keybind = shift+super+left_bracket=previous_tab
keybind = shift+super+right_bracket=next_tab

# macOS specific settings
macos-option-as-alt = true
macos-non-native-fullscreen = false
